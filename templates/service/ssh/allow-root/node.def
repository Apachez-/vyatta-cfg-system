type: bool
default: false
help: Enable/disable root login over ssh
update: if [ \"$VAR(@)\" == \"true\" ]; then 
		sudo ed - /etc/ssh/sshd_config <<-"EOF"
		/^PermitRootLogin/s/no/yes/
		wq
		EOF
	else
		sudo ed - /etc/ssh/sshd_config <<-"EOF"
		/^PermitRootLogin/s/yes/no/
		wq
		EOF
	fi
	/bin/true
