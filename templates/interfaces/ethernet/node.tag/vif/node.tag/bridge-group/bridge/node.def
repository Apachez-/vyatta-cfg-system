type: txt
help: "Add this interface to a bridge-group"
syntax: exec " \
        if [ -z \"`sudo brctl show | grep $(@) `\" ]; then \
          echo bridge interface $(@) doesn\\'t exist on this system ; \
          exit 1 ; \
        fi ; "
update: "sudo brctl addif $(@) $(../../../../@).$(../../@)"
delete: "sudo brctl delif $(@) $(../../../../@).$(../../@)"
