type: txt
help: "Configure system domain name"
syntax: pattern $(@) "^[-a-zA-Z0-9.]{0,63}$" ; "invalid domain name $(@)"

# also add localhost line into /etc/hosts (see host-name template)?
update: "sudo /opt/vyatta/sbin/vyatta_update_resolv.pl"

